<resources>
    <!-- Base application theme. -->
    <style name="Theme.AndroidServices" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="background">@color/dark_background</item>
        <item name="fontFamily">@font/avenir_normal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.ExpandedBarTextStyle" parent="Theme.AndroidServices">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="fontFamily">@font/avenir_normal</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="Theme.CollapsedBarTextStyle" parent="Theme.AndroidServices">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="fontFamily">@font/avenir_normal</item>
        <item name="android:textSize">0sp</item>
    </style>
</resources>